script/source = "extends Node2D


export(float) var acc = 0.0
export (PackedScene) var bullet

onready var player = get_tree().get_nodes_in_group('player')[0]
var pivot



func _ready():
	randomize()
	player.connect('shoot', self, 'shoot')



func _physics_process(_delta):
	if pivot == null:
		pivot = get_tree().get_nodes_in_group('weaponContainer')[0].get_children()[0].GemPivot

	else:
		position = lerp(position, pivot.global_position, acc)



func shoot():
	if bullet != null:
		var pitch_scale_random = rand_range(0.8, 1.2)
		$AudioStreamPlayer.pitch_scale = pitch_scale_random
		$AudioStreamPlayer.play()
		var b = bullet.instance()
		b.start_at(global_position, get_angle_to(get_global_mouse_position()))
		get_tree().get_nodes_in_group('bulletContainer')[0].add_child(b)

	
"

